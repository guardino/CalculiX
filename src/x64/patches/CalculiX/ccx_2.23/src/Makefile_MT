
CFLAGS = -Wall -O3  -I ../../../SPOOLES.2.2 -I ../../../pthreads-w32-2-9-1-release/Pre-built.2/include -DARCH="Linux" -DSPOOLES -DARPACK -DMATRIXSTORAGE -D_SC_NPROCESSORS_CONF=1 -posix -std=c99 -DUSE_MT=1
FFLAGS = -Wall -O3

CC=gcc
FC=gfortran

.c.o :
	$(CC) $(CFLAGS) -c $<
.f.o :
	$(FC) $(FFLAGS) -c $<

include Makefile.inc

SCCXMAIN = ccx_2.23.c

OCCXF = $(SCCXF:.f=.o)
OCCXC = $(SCCXC:.c=.o)
OCCXMAIN = $(SCCXMAIN:.c=.o)

DIR=../../../SPOOLES.2.2

LIBS = \
       $(DIR)/MT/src/spoolesMT.a \
       $(DIR)/spooles.a \
	../../../ARPACK/libarpack_MINGW64.a \
       ../../../pthreads-w32-2-9-1-release/Pre-built.2/lib/x64/libpthreadGC2.a -lm -lpthread

ccx_2.23_MT: $(OCCXMAIN) ccx_2.23_MT.a
	./date.pl; $(CC) $(CFLAGS) -c ccx_2.23.c; $(FC) -Wall -O3 -o $@ $(OCCXMAIN) ccx_2.23_MT.a $(LIBS)

ccx_2.23_MT.a: $(OCCXF) $(OCCXC)
	ar vr $@ $?
                                                                               
